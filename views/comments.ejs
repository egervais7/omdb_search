<section class='row text-center'>
  <h1 style='color:white'> Comments for <%= favorite.title %></h1>
</section>
<section class='row text:center'>
  <div class='col-sm-2'>
  </div>
  <div class='col-sm-4'>
    <img src='<%= favorite.poster %>' style='border: 15px solid white; border-radius:25px; position:relative; left:35px'>
  </div>
  <div class='col-sm-4'>
    <section class='row text-center'>
      <% comments.forEach(function(comment){ %>
      <div class='well'>
        <p style='font-weight: bold; font-size: 25px'>Written by: <%= comment.author %></p>
        <p><%= comment.text %></p><br>
        <a href='/favorites/<%= comment.id %>/comments' class='remove-button btn btn-danger glyphicon glyphicon-remove' ></a></h2>
      </div>
      <% }); %>
    </section><br>
    <section class='row text-center'>
      <div class='col-sm-3'>
      </div>
      <div class='col-sm-6 well'>
        <form action='' method='POST' role='form'>
          <p>Create New Comment</p>
          <div class='form-group'>
            <input type='text' class='form-control' id='' name='author' placeholder='Author Name'>
          </div>
          <div class='form-group'>
            <input type='text' class='form-control' id='' name='text' placeholder='Type Comment Here'>
          </div>
          <button type='submit' class='btn btn-default'>Submit</button>
        </form>
      </div>
      <div class='col-sm-3'>
      </div>
    </section>
  </div>
  <div class='col-sm-2'>
  </div>
</section>
